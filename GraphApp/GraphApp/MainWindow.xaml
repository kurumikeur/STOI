<Window x:Class="GraphApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="583" Width="800">
    <Grid Margin="0, 0, 0, 0" Width="Auto" Height="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="260pt"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100pt"/>
        </Grid.RowDefinitions>
        <Image Source="{Binding Path=result_image}" Margin="10" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="400"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="0,10,10,10" HorizontalAlignment="Right" Width="240pt" Height="auto"  Grid.Column="1" Grid.RowSpan="2">
            <Grid HorizontalAlignment="Right" Margin="0, 0, 0, 0" Width="240pt" Height="Auto" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120pt"></ColumnDefinition>
                    <ColumnDefinition Width="120pt"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="36pt"/>
                </Grid.RowDefinitions>
                <ListBox x:Name="listBox" ScrollViewer.VerticalScrollBarVisibility="Visible" d:ItemsSource="{d:SampleData}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="1" Grid.ColumnSpan ="2" Margin="0,0,0,5">
                    <!--ItemsSource="{Binding Path=Imgs}"-->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="46pt"/>
                                    <RowDefinition Height="18pt"/>
                                    <RowDefinition Height="18pt"/>
                                    <RowDefinition Height="18pt"/>
                                    <RowDefinition Height="18pt"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="32pt"/>
                                    <ColumnDefinition Width="32pt"/>
                                    <ColumnDefinition Width="32pt"/>
                                    <ColumnDefinition Width="60pt"/>
                                    <ColumnDefinition Width="60pt"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImgData}" Grid.ColumnSpan="3" Grid.RowSpan="3" HorizontalAlignment="Left" />
                                <Slider Value="{Binding Opacity}" Minimum="0" Maximum="1" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0"/>
                                <ComboBox ItemsSource="{Binding operation}" Margin="0, 0, 0, 1" Grid.Column="3" Grid.Row="3" Grid.ColumnSpan="2"/>
                                <Button Content="ЛИКВИДИРОВАТЬ" Click="Button_Click" VerticalAlignment="Stretch" Margin="0,2,0,0" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="5"/>
                                <Button Content="Вверх" Click="Button_Click" VerticalAlignment="Stretch" Margin="0,0,2,2" Grid.Column="3" Grid.Row="1" />
                                <Button Content="Вниз" Click="Button_Click" VerticalAlignment="Stretch" Margin="0,0,2,2" Grid.Column="4" Grid.Row="1" />
                                <CheckBox Margin="0, 5, 0, 0" FlowDirection="LeftToRight" Content="R" IsChecked="{Binding R}" Grid.Row="3" Grid.Column="0"/>
                                <CheckBox Margin="0, 5, 0, 0" FlowDirection="LeftToRight" Content="G" IsChecked="{Binding G}" Grid.Row="3" Grid.Column="1"/>
                                <CheckBox Margin="0, 5, 0, 0" FlowDirection="LeftToRight" Content="B" IsChecked="{Binding B}" Grid.Row="3" Grid.Column="2"/>
  
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Button Content="Открыть изображение" Click="Button_Click_OpenFile" VerticalAlignment="Stretch" Margin="6,0,5,5" Grid.Column="0" Grid.Row="1"/>
                <Button Content="Перерасчёт" Click="Button_Click_Recalculate" VerticalAlignment="Stretch" Margin="6,0,5,5" Grid.Column="1" Grid.Row="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
